<%= render 'nav_bar' %>
<br>
<%= form_with url: drink_search_path, method: :get, local:true do %>
    <div style= "color:white; font-family: 'Kaushan Script', cursive; font-size: 1.3em;"><p>Search drinks: <%= text_field_tag(:name, params[:search]) %></p></div>
    <div style= "font-family: 'Kaushan Script', cursive;"><%= submit_tag "Search" %></div>
    <% end %>
    <br>

<hr>

<div class="card-container">
    <% @drinks.each do |s| %>
    <div class="card" style="width: 18rem; display: inline-block; background-image: url(<%=s.image%>);">
      <div class="card-body">
        <h5 class="card-title"><%=link_to s.name, drink_path(s)%></h5> 
      </div>
    </div>

   <% end %>
</div>
  
</div>


