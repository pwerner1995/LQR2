<div style= "color:white"><h1 style = "display: flex; justify-content: center;"> Create user account </h1></div>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <div style= "color: white">❌<%= error %></p>
        <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :username, "Username ", class: "label-class"%>
    <%= f.text_field :username, class: "form-control" %>
    <br>
    <%= f.label :password, "Password ", class: "label-class" %>
    <%= f.password_field :password, class: "form-control"%>
    <br>
    <%= f.label :password_confirmation, "Confirm Password ", class: "label-class" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    <br>
    <br>
    <%= f.submit "Create an account", class: "form-control"  %>
    
    <% end %>
</div>
