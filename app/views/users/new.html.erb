<nav class="navbar navbar-expand-lg navbar-dark fixed-top" style = "background-color: rgb(145, 0, 0);font-family: 'Kaushan Script', cursive; opacity: 0.80;">
  <div class="container">
   <%= link_to "LQR", home_path, class:"navbar-brand" %>
