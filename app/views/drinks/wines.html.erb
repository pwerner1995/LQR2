<%= render 'application/nav_bar' %>

<div style= "color: white; font-family: 'Kaushan Script', cursive; font-size: 1.3em;"><h1>Wine here </h1></div>

<%= form_with url: wine_search_path, method: :get, local:true do %>
     <div style= "color: white; font-family: 'Kaushan Script', cursive; font-size: 1.3em;"><p>Search wines: <%= text_field_tag(:name, params[:search]) %></p></div>
    <%= submit_tag "Search" %>
    <% end %>
    <br>

<div class="card-container">
    <% @wines.each do |s| %>

  <div class="card" style="width: 18rem; display: inline-block; background-image: url(<%=s.image%>);">
    <div class="card-body">
      <h5 class="card-title"><%=link_to s.name, drink_path(s)%></h5> 
    </div>
  </div>

   <% end %>
</div>
  
</div>
